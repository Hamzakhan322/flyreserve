<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changepass"
    android:background="@color/TextColorNavyBlue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/mainIV"
        android:src="@drawable/logo1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainTV"
        android:text="eFlight Reservation"
        android:layout_below="@+id/mainIV"
        android:textColor="@color/text"
        android:background="@color/TextColorWhite"
        android:gravity="center"
        android:textSize="25sp"
        android:padding="5dp"
        android:textStyle="bold|italic"
        />

    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/oldpassword"
        android:layout_below="@id/mainTV"
        android:background="@color/TextColorWhite"
        android:hint="old password"
        android:textColor="@color/TextColorBlack"
        android:maxLines="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldpassword"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:background="@color/TextColorWhite"
        android:hint="New password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/TextColorBlack" />

    <EditText
        android:id="@+id/retypepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpassword"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="25dp"
        android:background="@color/TextColorWhite"
        android:hint="Re-type password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/TextColorBlack" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/retypepass"
        android:id="@+id/save"
        android:text="save"
        android:layout_centerInParent="true"
        android:textColor="@color/TextColorBlack"
        android:layout_margin="40dp"
        android:textStyle="bold|italic"
        android:background="@drawable/button_bg"
        />


</RelativeLayout>